  <div class="container">
    <h1>Weather Forecast</h1>
    <%= form_with url: weather_path, method: :get, local: true do %>
      <div class="form-group">
        <%= label_tag :zip_code, 'Enter Zip Code:' %>
        <%= text_field_tag :zip_code, params[:zip_code], class: 'form-control' %>
      </div>
      <%= submit_tag 'Get Weather', class: 'btn btn-primary' %>
    <% end %>

    <% if @weather_data %>
      <h2>Current Weather for <%= params[:zip_code] %></h2>
      <p>Temperature: <%= @weather_data['main']['temp'] %> Â°F</p>
      <% if @from_cache %>
        <p><strong>This data was retrieved from cache.</strong></p>
      <% end %>
    <% end %>
  </div>